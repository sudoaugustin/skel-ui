{
  "name": "@skel-ui/react",
  "author": "https://github.com/sudoaugustin",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Next era of skeleton loading for React",
  "files": ["dist"],
  "main": "dist/cjs/index.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/esm/index.js",
  "keywords": ["react", "skeleton", "loading", "placeholder"],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./tailwind": {
      "types": "./dist/src/tailwind.d.ts",
      "import": "./dist/esm/tailwind.js",
      "require": "./dist/cjs/tailwind.js"
    },
    "./styles.css": "./dist/styles.css",
    "./$components": "./stories/components/index.tsx"
  },
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "rm -rf dist && pnpm build:dts && pnpm build:css && pnpm build:esm && pnpm build:cjs",
    "build:dts": "tsc -p tsconfig.build.json --outDir dist",
    "build:css": "esbuild src/styles.css --outdir=dist",
    "build:esm": "esbuild src/*.ts* --bundle --format=esm --outdir=dist/esm --external:react --external:@radix-ui/* --external:tailwindcss",
    "build:cjs": "esbuild src/*.ts* --bundle --format=cjs --outdir=dist/cjs --external:react --external:@radix-ui/* --external:tailwindcss"
  },
  "bugs": {
    "url": "https://github.com/sudoaugustin/skel-ui/issues"
  },
  "homepage": "https://skel-ui.augustin.zip",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudoaugustin/skel-ui"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0"
  },
  "devDependencies": {
    "@skel-ui/core": "workspace:*",
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-onboarding": "^8.3.4",
    "@storybook/blocks": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-vite": "^8.3.4",
    "@storybook/test": "^8.3.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.2.0",
    "commons-utils": "workspace:*",
    "esbuild": "^0.24.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.3.4",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "react": "^17.0 || ^18.0",
    "react-dom": "^17.0 || ^18.0"
  }
}
